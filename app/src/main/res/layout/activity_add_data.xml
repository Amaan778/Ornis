<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add.AddData">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/theme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sales Screen"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins"
            android:textSize="@dimen/_20sdp"/>

    </Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="month"
        android:id="@+id/month"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_9sdp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:padding="@dimen/_9sdp"
                android:hint="Enter Your Date"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_6sdp"/>

            <EditText
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:padding="@dimen/_9sdp"
                android:hint="Enter Your Date"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Quantity"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_6sdp"/>

            <EditText
                android:id="@+id/item_quantity"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:padding="@dimen/_9sdp"
                android:hint="Enter Your Date"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Per unit price"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_6sdp"/>

            <EditText
                android:id="@+id/item_perunit"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:padding="@dimen/_9sdp"
                android:hint="Enter Your Date"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Total amount"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_6sdp"/>

            <EditText
                android:id="@+id/item_totalamount"
                android:layout_width="match_parent"
                android:editable="false"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:padding="@dimen/_9sdp"
                android:hint="Enter Your Date"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment mode"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_6sdp"/>

            <EditText
                android:id="@+id/item_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:padding="@dimen/_9sdp"
                android:hint="Enter Your Date"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Remarks"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_6sdp"/>

            <EditText
                android:id="@+id/item_remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:padding="@dimen/_9sdp"
                android:hint="Enter Your Date"/>

            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:fontFamily="@font/poppins"
                android:textSize="@dimen/_20sdp"
                android:layout_marginVertical="@dimen/_9sdp"/>

        </LinearLayout>
        
    </ScrollView>
    
</LinearLayout>